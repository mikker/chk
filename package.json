{
  "name": "@mikker/chk",
  "version": "1.0.4",
  "description": "A checkbox for use with Tachyons",
  "style": "css/checkbbox.min.css",
  "main": "css/checkbbox.css",
  "repository": "mikker/checkbbox",
  "files": [
    "css",
    "src"
  ],
  "scripts": {
    "build:src": "postcss src/chk.css -o css/chk.css -m",
    "build:minify": "postcss src/chk.css --use cssnano -o css/chk.min.css -m",
    "dev": "npm run build:src build:minify -- -w",
    "demo": "live-server --ignore=node_modules"
  },
  "author": "mikker",
  "license": "MIT",
  "devDependencies": {
    "cssnano": "^4.1.10",
    "live-server": "^1.2.1",
    "postcss": "^7.0.17",
    "postcss-cli": "^6.1.3",
    "postcss-preset-env": "^6.7.0"
  }
}
